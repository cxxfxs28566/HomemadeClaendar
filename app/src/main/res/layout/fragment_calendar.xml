    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_main"
        android:background="#03338e">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginRight="25dp">

            <ImageButton
                android:id="@+id/btn_previous_day"
                android:background="@drawable/roundcorner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_current_date"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/ic_iconmonstr_arrow_76" />
            <TextView
                android:id="@+id/tv_current_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/current_day_date"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
            <ImageButton
                android:id="@+id/btn_next_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_current_date"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/roundcorner"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/ic_iconmonstr_arrow_75" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/btn_add"
