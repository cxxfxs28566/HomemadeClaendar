            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/add_event"
            app:srcCompat="@drawable/ic_addevent" />
    </android.support.v7.widget.Toolbar>


